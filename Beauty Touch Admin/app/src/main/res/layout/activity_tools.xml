<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorOnBackground"
        android:orientation="vertical"
        tools:context=".Activity.ToolsActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/current_session_image"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/previous_session_image"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:elevation="0sp"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="0sp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imageSessionNow"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@color/image_profile"
                                    app:layout_constraintDimensionRatio="1:1"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/editImageSessionNow"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_gravity="top|right"
                                android:layout_margin="5sp"
                                android:background="@drawable/button_number"
                                android:backgroundTint="?tickColor"
                                android:padding="2sp"
                                android:src="@drawable/ic_adds"
                                app:layout_constraintDimensionRatio="1:1"
                                app:tint="@color/white" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:elevation="0sp"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="0sp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imageSessionOld"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@color/image_profile"
                                    app:layout_constraintDimensionRatio="1:1"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/editImageSessionOld"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_gravity="top|right"
                                android:layout_margin="5sp"
                                android:background="@drawable/button_number"
                                android:backgroundTint="?tickColor"
                                android:padding="2sp"
                                android:src="@drawable/ic_adds"
                                app:layout_constraintDimensionRatio="1:1"
                                app:tint="@color/white" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/current_session_logo"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/previous_session_logo"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/logoSessionNow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@color/image_profile"
                                app:layout_constraintDimensionRatio="1:1"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/editLogoSessionNow"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="bottom|left"
                            android:layout_margin="15sp"
                            android:background="@drawable/button_number"
                            android:backgroundTint="?tickColor"
                            android:padding="2sp"
                            android:src="@drawable/ic_adds"
                            app:layout_constraintDimensionRatio="1:1"
                            app:tint="@color/white" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/logoSessionOld"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@color/image_profile"
                                app:layout_constraintDimensionRatio="1:1"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/editLogoSessionOld"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="bottom|left"
                            android:layout_margin="15sp"
                            android:background="@drawable/button_number"
                            android:backgroundTint="?tickColor"
                            android:padding="2sp"
                            android:src="@drawable/ic_adds"
                            app:layout_constraintDimensionRatio="1:1"
                            app:tint="@color/white" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/current_session_number"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/previous_session_number"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sessionNumberNow"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/sessionNumberOld"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/current_session_name"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/previous_session_name"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sessionNow"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="9"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/sessionOld"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="9"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/current_year"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kufi"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/last_year"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="21sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/yearNow"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/yearOld"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="10sp"
                        android:textColor="?colorError"
                        android:textColorHint="?colorError"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="50sp"
                    android:layout_marginVertical="30sp"
                    android:background="@drawable/b"
                    android:backgroundTint="?tickColor"
                    android:gravity="center"
                    android:padding="15sp"
                    android:rotation="180"
                    android:src="@drawable/ic_back_white"
                    android:text="@string/publish" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>